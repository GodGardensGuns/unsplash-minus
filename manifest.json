{
  "manifest_version": 3,
  "name": "Unsplash Minus",
  "version": "1.0.1",
  "description": "Remove Unsplash+ sponsored content from your browsing experience",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.unsplash.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "extension_icon16.png",
    "32": "extension_icon32.png",
    "48": "extension_icon48.png",
    "128": "extension_icon128.png"
  }
}
